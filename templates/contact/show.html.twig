{% extends 'base.html.twig' %}

{% block title %}Les détails de contact {{contact.id}}: {{contact.firstName}} {{contact.lastName}}{% endblock %}

{% block description %}Accéder aux détails de {{contact.firstName}} {{contact.lastName}}{% endblock %}

{% block keywords %}détails, contact, {{contact.firstName}} {{contact.lastName}}{% endblock %}

{% block main %}
    <h1 class="text-center display-5 my-3"> Les détails de ce contact</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto p-4 rounded shadow bg-write">
                <div>
                <p><strong>Prénom: </strong> {{contact.firstName}}</p>
                <p><strong>Nom: </strong> {{contact.lastName}}</p>
                <p><strong>Email: </strong> {{contact.email}}</p>
                <p><strong>Téléphone: </strong> {{contact.phone}}</p>
                {% if contact.comment is empty %}
                    <p><strong>Commentaire: </strong> Non renseigné</p>
                 {% else %}   
                    <p><strong>Commentaire: </strong> {{contact.comment}}</p>
                {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}